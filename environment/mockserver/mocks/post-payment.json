        "headers": {
            "Content-Type": {
                "equalTo": "application/json"
            }
        },
        "bodyPatterns": [{
            "equalToJson":{
                "valor": 100.0,
                "cpf": "00000000000",
                "cartao": {
                    "titular": "John Doe",
                    "numero": "4111111111111111",
                    "data_expiracao": "12/2018",
                    "bandeira": "VISA",
                    "cvv": "123"
                }
            }
        }]
    },
    "response": {
        "status": 200,
        "jsonBody": {
            "message": "successfully created"
        },
        "headers": {
            "Content-Type": "application/json"
        }
    }
}
